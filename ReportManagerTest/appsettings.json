{
  "JwtSettings": {
    "SecurityKey": "SuperSecretKeyHereThatIsAtLeast32Characters",
    "ValidIssuer": "yourDomain.com",
    "ValidAudience": "yourAudience"
  },

  "AuthenticationMethods": {
    "SSO_Enabled": false,
    "Windows_Auth_Enabled": false,
    "Manual_Auth_Enabled": true
  },

  "ConnectionSettings": {
    "MongoConnectionString": "${{ MongoDB.MONGO_URL }}",
    "MongoDbName": "ReportForge"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
